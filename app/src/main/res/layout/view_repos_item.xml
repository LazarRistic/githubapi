<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/title_text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Linguist" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/sub_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title_text_view"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        tools:text="Langugage Savent. If Your repositorys langugage" />

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/description_text_view"
        app:layout_constraintTop_toBottomOf="@id/description_text_view">

        <TextView
            android:id="@+id/open_issues_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/number_default"
            android:textColor="@color/sub_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_issues"
            app:drawableTint="@color/sub_text"
            tools:text="25" />

        <TextView
            android:id="@+id/stars_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/number_default"
            android:textColor="@color/sub_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_star"
            app:drawableTint="@color/sub_text"
            tools:text="25" />

        <TextView
            android:id="@+id/fork_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/number_default"
            android:textColor="@color/sub_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_fork"
            app:drawableTint="@color/sub_text"
            tools:text="25" />

        <TextView
            android:id="@+id/watcher_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/number_default"
            android:textColor="@color/sub_text"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_watchers"
            app:drawableTint="@color/sub_text"
            tools:text="25" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>