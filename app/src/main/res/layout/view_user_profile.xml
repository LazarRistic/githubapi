<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:contentDescription="@string/user_avatar_url"
        tools:background="@color/colorAccent" />

    <TextView
        android:id="@+id/login_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/title_text"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Login name" />

    <TextView
        android:id="@+id/company_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="128"
        android:drawablePadding="8dp"
        android:textColor="@color/sub_text"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_company"
        app:drawableTint="@color/sub_text"
        tools:text="name" />

    <TextView
        android:id="@+id/bio_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:alpha="128"
        android:lines="2"
        android:textColor="@color/sub_text"
        android:textSize="20sp"
        tools:text="name" />

    <LinearLayout
        android:id="@+id/repo_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/layour_bg_rounded_corners"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/repositories"
            android:src="@drawable/ic_repo"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/repositories"
            android:textColor="@color/white" />

    </LinearLayout>

</merge>